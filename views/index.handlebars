
<!DOCTYPE html>
<html>
<head>
    <title>Finances</title>
    <link rel="stylesheet" href="/css.css" />

    {{#if user}}
    <script type="text/javascript" defer="defer" src="/main.js"></script>
    <script type="text/javascript" defer="defer" src="/plot.js"></script>
    {{else}}
    <script type="text/javascript" defer="defer" src="/login.js"></script>
    {{/if}}
</head>

<body>

{{#if user}}

    <div class = "fluid-container">
        <canvas id="myCanvas" ></canvas>
    </div>

    <div class = "fluid-container">
        
        <div id="expensestable">
            
            <div id="expenseinput" class="expense">
                <div class="neutral">
                    <div class="value">
                        <input type="text"   maxlength="7"  id="expenseinputvalue" value="0.00" >
                        <div style="color: #000;">&nbspâ‚¬</div>
                    </div>
                    <div class="date">
                        <input type="text"   maxlength="10" id="expenseinputdate" >
                    </div>
                    <div class="type">
                        <input type="text"   class="type" id="expenseinputtype" value="Type" >
                    </div>
                    <div class="description">
                        <input type="text"   class="descritption" id="expenseinputdesc" value="Description"  >
                    </div>
                    <div class="button">
                        <button class="save" onclick="saveNewExpense()">Save</button>
                    </div> 
                </div>
            </div> 

        </div>
    </div>

{{else}}

    <div class = "fluid-container">
        <div id="loginandregister">
            <div>
                <input type="text" class="form-control" placeholder="Username"    id="username">
            </div>
            <div>
                <input type="password" class="form-control" placeholder="Password" id="password">
            </div>
            <div>
                <button class="save" onclick="loginUser()"   >Login</button>
                <button class="edit" onclick="registerUser()">Register</button> 
            </div>

        </div>
    </div>

{{/if}}

</body>

</html>